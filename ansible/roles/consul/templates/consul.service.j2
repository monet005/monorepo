[Unit]
Description="HashiCorp Consul - A service mesh solution"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/etc/consul.d/consul.hcl

[Service]
Type=exec
User=consul
Group=consul
{% raw %}
ExecStart=/usr/bin/consul agent -config-dir=/etc/consul.d/ -bind='{{ GetPrivateInterfaces | include "network" "192.168.0.0/24" | attr "address" }}'
{% endraw %}
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
